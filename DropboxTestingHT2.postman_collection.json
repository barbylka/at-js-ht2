{
	"info": {
		"_postman_id": "6dbeba23-82d3-41a5-aea6-9d5f39fe7092",
		"name": "DropboxTestingHT2",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
		"_exporter_id": "23624728"
	},
	"item": [
		{
			"name": "Upload a file",
			"event": [
				{
					"listen": "test",
					"script": {
						"type": "text/javascript",
						"exec": [
							"const jsonData = pm.response.json();\r",
							"\r",
							"pm.test(\"Check a file is uploaded\", function () {\r",
							"    pm.expect(jsonData.path_display).to.eql(pm.collectionVariables.get(`pathToFile`));\r",
							"});\r",
							"\r",
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.collectionVariables.set(\"fileHash\", jsonData.content_hash);"
						]
					}
				}
			],
			"protocolProfileBehavior": {
				"disabledSystemHeaders": {
					"content-type": true
				}
			},
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Dropbox-API-Arg",
						"value": "{\"autorename\":false,\"mode\":\"add\",\"mute\":false,\"path\":\"{{pathToFile}}\",\"strict_conflict\":false}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/octet-stream",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{contentBaseUrl}}/2/files/upload",
					"host": [
						"{{contentBaseUrl}}"
					],
					"path": [
						"2",
						"files",
						"upload"
					]
				}
			},
			"response": []
		},
		{
			"name": "Get the file metadata",
			"event": [
				{
					"listen": "test",
					"script": {
						"type": "text/javascript",
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"File hash from the response is equal to the uploaded one\", function () {\r",
							"    const jsonData = pm.response.json();\r",
							"    pm.expect(jsonData.content_hash).to.eql(pm.collectionVariables.get(\"fileHash\"));\r",
							"});"
						]
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"include_deleted\":false,\r\n    \"include_has_explicit_shared_members\":false,\r\n    \"path\": \"{{pathToFile}}\",\r\n    \"include_media_info\":false\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{apiBaseUrl}}/get_metadata",
					"host": [
						"{{apiBaseUrl}}"
					],
					"path": [
						"get_metadata"
					]
				}
			},
			"response": []
		},
		{
			"name": "Delete a file",
			"event": [
				{
					"listen": "test",
					"script": {
						"type": "text/javascript",
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							""
						]
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"path\" : \"{{pathToFile}}\"\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{apiBaseUrl}}/delete_v2",
					"host": [
						"{{apiBaseUrl}}"
					],
					"path": [
						"delete_v2"
					]
				}
			},
			"response": []
		}
	],
